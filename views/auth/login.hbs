<h1>Login</h1>
    {{#if messages}}
        <div class="alert alert-danger">Invalid Login</div>
        {{else}}
        <div class="alert alert-warning">Please enter your credentials</div>

    {{/if}}
    <form method="post">
    <fieldset class="form-group">
        <label for="username" class="col-2 control-label">Username: *</label>
        <input name="username" id="username" required />
    </fieldset>
    <fieldset class="form-group">
        <label for="password" class="col-2 control-label">Password: *</label>
        <input name="password" id="password" type="password" required />
    </fieldset>
    <fieldset class="form-group">
        <button class="btn btn-info offset-3">Login</button>
        <hr />
        <a href="/auth/github" class="offset-2">
            <img src="/images/github-signin.jpg" alt="Sign In with Github">
        </a>
        <hr />
            Need an account?  <a href="/auth/register" title="Register">Register</a>
    </fieldset>
</form>