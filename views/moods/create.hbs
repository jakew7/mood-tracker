<div class="edith1">
    <h1>{{title}}</h1>
</div>
    <form method="post">
        <fieldset>
            <label class="control-label col-2" for="name">Name: </label>
            <input name="name" id="name" required/>
        </fieldset>
        <fieldset>
            <label class="control-label col-2" for="emotion">Emotion: </label>
            <input name="emotion" id="emotion" required/>
        </fieldset>
        <fieldset>
            <label class="control-label col-2" for="notable">Why?  </label>
            <textarea name="notable" id="notable"></textarea>
        </fieldset>
        <fieldset>
            <label class="control-label col-2" for="date">Date: </label>
            <input name="date" id="date" type="date"/>
        </fieldset>
        <button class="btn btn-secondary offset-2">Save</button>
    </form>